#!/usr/bin/env bash
fn_filemanager() {

    source lib/banners
    laravel_dir=$1
    cd "${laravel_dir}" || exit 1

    bannerColor "Installing FileManager." "blue" "*"
    bannerColor 'Running composer require backpack/filemanager' "blue" "*"
    composer require backpack/filemanager || exit 4
    echo
    bannerColor 'Running php artisan backpack:filemanager:install' "blue" "*"
    php artisan backpack:filemanager:install || exit 4
    echo
    bannerColor 'NewsCRUD installed.' "blue" "*"
}
